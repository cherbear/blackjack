<div class="row">
  <div class="column">
    <h1>Join a Blackjack Game</h1>
    
    <%= form_for @conn, "/game", fn f-> %>
      <p> Enter Name of Game: <%= text_input f, :game, placeholder: "cs4550" %></p>
      <p> Enter Name of Player: <%= text_input f, :user, placeholder: "Bob" %></p>
      <p><%= submit "Join Game" %></p>
    <% end %>
    
  </div>
</div
